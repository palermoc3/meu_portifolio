<h1>New product</h1>

<div class="container mt-5">
  <div style="margin: 0 15%;">
    <%= form_with(model: @product) do |form| %>
      <% if @product.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mt-5">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control mt-3" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :weight %>
        <%= form.text_field :weight, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :width %>
        <%= form.text_field :width, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :length %>
        <%= form.text_field :length, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :valueSell %>
        <%= form.text_field :valueSell, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :valueBuy %>
        <%= form.text_field :valueBuy, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :depth %>
        <%= form.text_field :depth, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :photo1 %>
        <%= form.file_field :photo1, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :photo2 %>
        <%= form.file_field :photo2, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :photo3 %>
        <%= form.file_field :photo3, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :category_id %>
        <%= form.collection_select(:category_id, Category.all, :id, :name, { prompt: true }, { class: 'form-control select2' }) %>
      </div>

      <div class="form-group my-5">
        <%= form.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<br>

<div>
  <%= link_to "Show this product", @product %> |
  <%= link_to "Back to products", products_path %>
</div>
