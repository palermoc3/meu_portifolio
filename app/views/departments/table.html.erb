<p style="color: green; text-align: center;"><%= notice %></p>
<p style="color: red; text-align: center;"><%= alert %></p>
<h1 class="text-center">Departments</h1>
<div style="margin-left: 10%; margin-right: 10%;">

  <table class="table table-striped align-middle text-center border border-primary rounded p-3 my-5">
    <thead>
      <tr>
        <th scope="col" class="text-start text-center align-middle pe-4">id</th>
        <th scope="col" class="text-start text-center align-middle pe-4">Nome</th>
        <th scope="col" class="text-start text-center align-middle pe-4">Quantity</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <th scope="row" class="text-start text-center align-middle pe-4"><%= department.id %></th>
          <td class="text-start text-center align-middle pe-4"><%= department.name %></td>
          <td><%= department.quantity %></td>
          <td class="text-end align-middle">
            <div class="d-flex justify-content-end">
              <%= link_to "Ver item", department, class: "btn btn-primary me-2" %>
              <%= link_to "Editar item", edit_department_path(department), class: "btn btn-dark me-2" %>
              <%= button_to "Deletar item", department, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center align-items-center custom-pagination">
    <%= paginate @departments, outer_window: 2, inner_window: 2 %>
  </div>

  <%= link_to "New department", new_department_path, class: "btn btn-primary btn-block mt-5" %>
</div>
