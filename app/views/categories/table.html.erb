<p style="color: green; text-align: center;"><%= notice %></p>
<p style="color: red; text-align: center;"><%= alert %></p>
<h1 class="text-center">Categories</h1>
<div style="margin-left: 10%; margin-right: 10%;">

  <table class="table table-striped align-middle text-center border border-primary rounded p-3">
    <thead>
      <tr>
        <th scope="col" class="text-start text-center align-middle pe-4">id</th>
        <th scope="col" class="text-start text-center align-middle pe-4">Nome</th>
        <th scope="col" class="text-start text-center align-middle pe-4">Quantity</th>
        <th scope="col" class="text-start text-center align-middle pe-4">Departments</th>
        <th scope="col" class="text-start text-center align-middle pe-4"></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <th scope="row" class="text-start text-center align-middle pe-4"><%= category.id %></th>
          <td class="text-start text-center align-middle pe-4"><%= category.name %></td>
          <td><%= category.quantity %></td>
          <td class="text-start text-center align-middle pe-4">
            <%= Department.find(category.department_id).name %>
          </td>
          <td class="text-end align-middle">
            <div class="d-flex justify-content-end">
              <%= link_to "Ver item", category, class: "btn btn-primary me-2" %>
              <%= link_to "Editar item", edit_category_path(category), class: "btn btn-dark me-2" %>
              <%= button_to "Deletar item", category, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center align-items-center custom-pagination">
          <%= paginate @categories, theme: 'bootstrap-5',
                   pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block" %>
  </div>

  <%= link_to "Nova Categoria", new_category_path, class: "btn btn-primary btn-block" %>
</div>
